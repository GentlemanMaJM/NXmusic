/*    border-radius: 10rpx;*/
/*}*/
.videoScroll .videoItem .common {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}


.videoScroll .videoItem text{
    display: block;
    width: 80%;
    font-size: 30rpx;
    line-height: 60rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.footer {
    display: flex;
}

.footer .userImg {
    border-radius: 50%;
    width: 50rpx;
    height: 50rpx;
    margin-top: 8rpx;
    margin-right: 5rpx;
    margin-bottom: 8rpx;
}

.footer .forwardBtn {
    width: 50rpx;
    height: 50rpx;
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}










