/*头部区域*/
.videoContainer .header {
    display: flex;
    margin: 10rpx;
}

.videoContainer .header image {
    width: 60rpx;
    height: 60rpx;
}

.videoContainer .header .search {
    border: 1rpx solid #eee;
    /*flex:1; 就是代表均匀分配元素*/
    flex: 1;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}

/*导航区*/
.navScroll {
    display: flex;
    /*禁止换行*/
    white-space: nowrap;
    height: 60rpx;
}

.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.navScroll .navItem .navContent{
    height: 60rpx;
    box-sizing: border-box;
}

.navItem .active{
    border-bottom: 1rpx solid #d43c33;
}

/*视频列表区域*/
.videoScroll{
    margin-top: 10rpx;
    /*calc ： 可以动态的计算css的宽高*/
    /*vh视口单位：1vh = 1%的视口高度 */
    height: calc(100vh - 140rpx);
}

.videoScroll .videoItem {
    padding: 0 3%;
}

/*.videoScroll .videoItem video {*/
