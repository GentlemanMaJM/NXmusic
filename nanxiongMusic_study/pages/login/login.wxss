.wrapper .left-top-sign{
    position:relative;
    left: -16rpx;
    font-size: 120rpx;
    color: #f8f8f8;
}

.welcome{
    position:relative;
    left: 50rpx;
    top: -90rpx;
    font-size: 46rpx;
    color: #555;
}

.input-content{
    padding: 0 60rpx;
}

.input-item{
    display:flex;
    flex-direction: column;
    align-items:flex-start;
    background:#f8f6fc;
    justify-content: center;
    padding: 0 30rpx;
    height: 120rpx;
    border-radius: 4px;
    margin-bottom: 50rpx;
}

.input-item .tit{
    height: 50rpx;
    line-height: 56rpx;
    font-size: 30rpx;
    color: #606266;
}

.input-item input{
    height: 60rpx;
    font-size: 30rpx;
    color: #303133;
    width: 100%;
}

.confirm-btn{
    width: 630rpx!important;
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 50rpx;
    margin-top: 70rpx;
    background: #d43c33;
    color: #fff;
    font-size: 32rpx;
    padding: 0;
}

.forget-section{
    font-size: 28rpx;
    color: #4399fc;
    text-align: center;
    margin-top: 40rpx;
}

.register-section{
    position:absolute;
    bottom: 50rpx;
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #606266;
}

.register-section text{
    color: #4399fc;
    margin-left: 10rpx;
}
